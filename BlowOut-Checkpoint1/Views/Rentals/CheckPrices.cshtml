<body class="body">

    @model IEnumerable<BlowOut_Checkpoint1.Models.Instruments>

    @{
        ViewBag.Title = "CheckPrices";
    }

    <link rel="stylesheet" href="~/Content/Site.css" />

    <h2>@ViewBag.Instrument1.InstrumentName</h2>


    <button class="btn-block" onclick="location.href='@Url.Action("Create", "Clients", new { ID = ViewBag.Instrument1.InstrumentCode })'">Buy New</button>
    <p> @ViewBag.Instrument1.Price </p>
    <button class="btn-block" onclick="location.href='@Url.Action("Create", "Clients", new { ID = ViewBag.Instrument1.InstrumentCode })'">Buy Used</button>
    <p> @ViewBag.Instrument2.Price </p>


    <br /><br />
    <button class="btn-block" onclick="location.href='@Url.Action("Index", "Rentals")'">Back to Instrument Rentals</button>

    <div class=“card” style=“width: 30rem;“>
        <div class=“card-body”>
            <h5 class=“card-title”>Note</h5>
            <h6 class=“card-subtitle mb-2 text-muted”>Renting Policy</h6>
            <p class=“card-text”>Once the 18 month of a rental has been achieved, the client owns the instrument. If they return it at any time before 3 months, there will be a $200 re-stocking fee. If they return it after 3 months they forfeit any equity in the instrument.</p>
        </div>
    </div>
</body>