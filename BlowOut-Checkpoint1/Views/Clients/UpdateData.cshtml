@model IEnumerable<BlowOut_Checkpoint1.Models.Client>

@{
    ViewBag.Title = "Index";
}

<br /><br />
<h2>Update Order Data</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Order Number
        </th>
        <th>
            Instrument
        </th>
        <th>
            Type
        </th>
        <th>
            Monthly Price
        </th>
        <th>
            Total Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientZip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientPhone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientID)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.Instruments.InstrumentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instruments.InstrumentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instruments.Price)
        </td>
        <td>
            @{ decimal total = item.Instruments.Price * 18; }
            @total
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ClientFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientZip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientPhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
        </td>
    </tr>
}

</table>
